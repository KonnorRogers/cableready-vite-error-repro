<h2>Log in</h2>

<%= sl_form_with(model: resource, url: session_path(resource_name)) do |f| %>
  <app-form-group>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </app-form-group>

  <app-form-group>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </app-form-group>

  <% if devise_mapping.rememberable? %>
    <app-form-group>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </app-form-group>
  <% end %>

  <sl-button-group>
    <%= f.submit "Log in" %>
  </sl-button-group>
<% end %>

<%= render "devise/shared/links" %>
