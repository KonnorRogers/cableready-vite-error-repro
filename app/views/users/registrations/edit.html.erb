<h2><%= t("edit") + " " + resource_name.to_s.humanize %></h2>

<%= sl_form_with(model: resource, url: registration_path(resource_name), method: :put) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <app-form-group>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </app-form-group>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t("auth.waiting_confirmation") %>: <%= resource.unconfirmed_email %></div>
  <% end %>

  <app-form-group>
    <%= f.label :password %> <small>(<%= t("auth.no_change") %>)</small><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <small><%= "#{@minimum_password_length} #{t('auth.minimum_characters')}" %> </small>
    <% end %>
  </app-form-group>

  <app-form-group>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </app-form-group>

  <app-form-group>
    <%= f.label :current_password %> <small>(<%= t("auth.current_password_prompt") %>)</small><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </app-form-group>

  <sl-button-group>
    <%= f.submit t("update") %>
  </sl-button-group>
<% end %>

<h3><%= t("auth.cancel") %></h3>

<p><%= button_to t("auth.cancel"), registration_path(resource_name), data: { confirm: t("are_you_sure") }, method: :delete %></p>

<%= link_to t("back"), :back %>
